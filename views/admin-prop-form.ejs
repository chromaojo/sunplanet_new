<div class="card shadow-lg mx-4 card-profile-bottom">
  <div class="card-body p-3">
    <div class="row gx-4">
      <div class="col-auto">
        <div class="avatar avatar-xl position-relative">
          <img src="/assets/img/team-1.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
        </div>
      </div>
      <div class="col-auto my-auto">
        <div class="h-100">
          <h5 class="mb-1 text-uppercase">
            Create New Property
          </h5>
          <p class="mb-0 font-weight-bold text-sm">
            <%= userData.email %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-md-8">
      <form action="/spco/props/create" class="p-4 border rounded bg-light needs-validation" novalidate method="POST" enctype="multipart/form-data">
        <div class="card">
          <div class="card-header pb-0">
            <div class="d-flex align-items-center">
              <p class="mb-0">Edit Profile</p>
              <button class="btn btn-primary btn-sm ms-auto" type="submit">Submit</button>
            </div>
          </div>
          <div class="card-body">
            <p class="text-uppercase text-sm">Add New Property</p>
            <div class="row">

              <div class="row">
                <div class="col-md-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Property Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter new property name"
                      name="property_name" required>
                    <div class="invalid-feedback">Please enter property name.</div>
                  </div>
                </div>
                <div class="col-md-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Youtube Link</label>
                    <input type="text" name="youtube" class="form-control" id="name"
                      placeholder="Enter unit investment price" required>
                    <div class="invalid-feedback">Please enter property youtube link</div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Address</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter street name & number "
                      name="address" required>
                    <div class="invalid-feedback">Please enter property address.</div>
                  </div>
                </div>
                <div class="col-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">City</label>
                    <input type="text" name="city" class="form-control" id="name"
                      placeholder="Enter City" required>
                    <div class="invalid-feedback">Please enter the city of the property</div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">State</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter a state"
                      name="state" required>
                    <div class="invalid-feedback">Please enter state (Property Location).</div>
                  </div>
                </div>
                <div class="col-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Country</label>
                    <input type="text" name="country" class="form-control" id="name"
                      placeholder="Enter unit investment price" required>
                    <div class="invalid-feedback">Please enter unit price</div>
                  </div>
                </div>
              </div>      
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="name" class="form-label">Postal Code</label>
                    <input type="number" name="postal_code" class="form-control" id="name"
                      placeholder="Enter postal code" required>
                    <div class="invalid-feedback">Please enter postal code.</div>
                  </div>                
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="role" class="form-label">Property Type</label>
                    <select class="form-select" id="role" name="property_type" required>
                      <option value="">Choose...</option>
                      <option value="active">Active</option>
                      <option value="closed">Closed</option>
                      <option value="pending">Pending</option>
                    </select>
                    <div class="invalid-feedback">Please select a property type.</div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Amount (NGN)</label>
                    <input type="number" name="rent_price" class="form-control" id="name"
                      placeholder="Enter amount or price" required>
                    <div class="invalid-feedback">Please enter the amount/price.</div>
                  </div>
                </div>
                <div class="col-6">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Size (SqFt)</label>
                    <input type="number" name="size_in_sqft" class="form-control" id="name"
                      placeholder="Enter Duration" required>
                    <div class="invalid-feedback">Kindly create a new property type if needed</div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <!-- Name Field -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Bedroom</label>
                    <input type="number" name="bedrooms" class="form-control" id="name"
                      placeholder="Enter available rooms" required>
                    <div class="invalid-feedback">Please enter the rooms available.</div>
                  </div>
                </div>
                <div class="col">
                  <div class="mb-3">
                    <label for="name" class="form-label">Bathroom</label>
                    <input type="number" name="bathrooms" class="form-control" id="name"
                      placeholder="Enter Duration" required>
                    <div class="invalid-feedback">Kindly create a new property type if needed</div>
                  </div>
                </div>
                <div class="col">
                  <div class="mb-3">
                    <label for="name" class="form-label">Available Units</label>
                    <input type="number" name="number_of_units" class="form-control" id="name"
                      placeholder="Enter Duration" required>
                    <div class="invalid-feedback">Kindly create a new property type if needed</div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="mb-3">
                    <label for="message" class="form-label">Picture(s)</label>
                    
                      <input type="file" name="picture" id="picture" maxlength="5" multiple accept=".jpeg, .png, .jpg" class="form-control">
                    <div class="invalid-feedback">Please select one or more pictures.</div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="mb-3">
                    <label for="role" class="form-label">Action</label>
                    <select class="form-select" id="role" required name="action">
                      <option value="">Choose...</option>
                      <option value="for_lease">For Lease</option>
                      <option value="for_sale">For Sale</option>
                      <option value="shortlet">Shortlet</option>
            
                    </select>
                    <div class="invalid-feedback">Please select a status.</div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="mb-3">
                    <label for="message" class="form-label">Property Details</label>
                    <textarea class="form-control" name="description" id="message" rows="4"
                      placeholder="Write investment details..." required></textarea>
                    <div class="invalid-feedback">Please enter the property details.</div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="mb-3">
                    <label for="role" class="form-label">Property Status</label>
                    <select class="form-select" id="role" name="lease_status" required>
                      <option value="">Choose...</option>
                      <option value="available">Available</option>
                      <option value="closed">Closed</option>
                      <option value="occupied">Occupied</option>
                      <option value="under_construction">Under Construction</option>
                      <option value="under_maintenance">Under Maintenance</option>
                    </select>
                    <div class="invalid-feedback">Please select a status.</div>
                  </div>
                  <!-- Checkbox -->
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="terms" required>
                    <label class="form-check-label" for="terms">
                      I have cross checked the details inputted .
                    </label>
                    <div class="invalid-feedback">Ensure every information is accurate.</div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col-md-4">
      <div class="card card-profile">
        <img src="/assets/img/home-decor-1.jpg" alt="Image placeholder" class="card-img-top">

        <div class="card-header text-center border-0 pt-0 pt-lg-2 pb-4 pb-lg-3">
          <div class="text-center mt-4 mb-4">
            <b>Add Property Type</b>
          </div>
        </div>
        <div class="card-body pt-0">
          <form action="" method="POST">
            <div class="row">
              <div class="col">
                <div class="mb-3">
                  <label for="name" class="form-label">Property Type</label>
                  <input type="text" class="form-control" id="name" placeholder="Enter new property Type"
                    name="property_name" required>
                  <div class="invalid-feedback">Please enter property type.</div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Add</button>
              </div>
            </div>
          </form>


        </div>
      </div>
    </div>
  </div>
</div>










<script>
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>