<div class="card shadow-lg mx-4 card-profile-bottom">
  <div class="card-body p-3">
    <div class="row gx-4">
      <div class="col-auto">
        <div class="avatar avatar-xl position-relative">
          <img src="/assets/img/icons/flags/nijja.gif" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
        </div>
      </div>
      <div class="col-auto my-auto">
        <div class="h-100">
          <h5 class="mb-1 text-uppercase">
            Help Desk
          </h5>
          <p class="mb-0 font-weight-bold text-sm">
            <%= userData.email %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="container-fluid py-4">
  <div class="row">

    <div class="col-md-12">
      <div class="card">
        <div class="card-header pb-0 p-3">
          <div class="d-flex justify-content-between">
            <h6 class="mb-2">
              <img src="/assets/img/icons/flags/nijja.gif" alt="Country flag" width="23px">
             Report Id - <%= help.report_id %>
            </h6>
            <span class="text-xs">Account : <span class="text-dark ms-sm-2 font-weight-bold p-2"><%= help.account_id %></span></span>
          </div>
        </div>
        <div class="card-body p-3">
          <ul class="list-group">
            <li class="list-group-item border-0 d-flex p-4 mb-2 mt-3 bg-gray-100 border-radius-lg">
              <div class="d-flex flex-column">
                <h6 class="mb-3 text-sm text-uppercase">
                  <%= help.title %>
                </h6>
                <span class="mb-4 text-xs">Name : <span class="text-dark ms-sm-2 font-weight-bold text-capitalize"><%= help.name %></span></span>
                <span class="mb-4 text-xs">Phone Number : <span class="text-dark font-weight-bold ms-sm-2"><%= help.number %></span></span>
                <span class="mb-4 text-xs">Status : <span class="text-dark ms-sm-2 font-weight-bold text-capitalize"><%= help.status %></span></span>
                <span class="text-xs">Details: <span class="text-dark ms-sm-2 font-weight-bold "><%= help.complain %></span></span>
              </div>
              <div class="ms-auto text-end mt-3">
                <a class="btn btn-primary px-3 mb-0" href="javascript:;"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
                <a class="btn btn-danger text-gradient px-3 mb-0" href="javascript:;"><i class="far fa-trash-alt me-2"></i>Delete</a>
                
              </div>
            </li>
          </ul>
        </div>
        <div class="d-flex justify-content-between p-3">
          <span class="text-xs">Date : <span class="text-dark ms-sm-2 font-weight-bold p-2">My <%= new Date(help.date).toLocaleDateString() %></span></span>
          <span class="text-xs">Time : <span class="text-dark ms-sm-2 font-weight-bold p-2"><%= help.time %></span></span>
        </div>
      </div>
    </div>
  </div>
</div>