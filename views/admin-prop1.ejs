<% if (property) { %>
  <div id="invest-all p-3">
    <div class="row">
      <div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
        <div class="card">
          <div class="card-body p-3">
            <div class="row">
              <div class="col-12">
                <div class="numbers">
                  <p class="text-sm mb-3 text-uppercase font-weight-bold">
                    <img src="/assets/img/icons/flags/nijja.gif" alt="Country flag" width="30px">
                   Property <%=property.action.replace('_', ' ') %> --  ₦<%= Number (property.rent_price).toLocaleString() %>
             
                  </p>
                  <h5 class="font-weight-bolder text-capitalize">
                    <%=property.property_name %>
                  </h5>
                  <div class="row">
                    <div class="col-md-6 p-3">

                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Available Units</span>
                        <%=property.number_of_units %>
                      </p>
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Size </span>
                        <%=property.size_in_sqft %> SqFt
                      </p>
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Address </span>
                        <%=property.address %> , <%=property.city %> ,  <%=property.state %>  State,  <%=property.country %> 
                      </p>
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Amount </span>
                        ₦<%= Number (property.rent_price).toLocaleString() %>
                      </p>
                      <p class="mb-3 mt-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Info : </span>
                        <%= property.description %>
                      </p>
                      
                    </div>
                    <div class="col-md-6 p-2">
                      <b class="text-capitalize">
                       Status :  <%= property.lease_status %> 
                      </b> <br>
                      <p class="mb-3 mt-3 text-capitalize">
                        <b>
                          <span class="text-success text-sm font-weight-bolder">Bedroom(s)</span>
                        <%=property.bedrooms %> unit(s)
                        </b>
                      </p>
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Bathroom(s)</span>
                        <%=property.bathrooms %> unit(s)
                      </p>
                      <a href="/spco/rent-apply/<%= property.id %>" class="btn btn-primary mt-3">Apply Now</a>
                    </div>
                  </div>

                  

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

  </div> <br>

  <% } else { %>
    <div class="row mt-4">
      <div class="card p-4">
        <h3 class="text-capitalize text-center">There is currently no information</h3>
      </div>
    </div> <br>
    <% } %>