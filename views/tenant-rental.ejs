<% if (rents.length> 0) { %>
  <div id="prop-all p-3">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-header pb-0">
            <h6>My Rentals</h6>
          </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center justify-content-center mb-0">
                <thead>

                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Property Name</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Property Type
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price (NGN)
                    </th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">
                      Status</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% rents.forEach(props=> { %>
                    <tr>
                      <td>
                        <div class="d-flex px-2">
                            <div>
                              <a href="/tnt/rental/<%= props.id %>">
                                <img src="/assets/img/curved-images/curved1.jpg"
                                class="avatar avatar-sm rounded-circle me-2" alt="Index Image">
                              </a>
                              
                            </div>
                            <div class="my-auto">
                              <a href="/tnt/rental/<%= props.id %>">
                                <h6 class="mb-0 text-sm text-capitalize">
                                <%= props.property_name %>
                              </h6>
                              </a>
                              
                            </div>
                        </div>
                      </td>
                      <td>
                        <a href="/tnt/rental/<%= props.id %>">
                        <p class="text-sm font-weight-bold mb-0">
                          <%= props.property_type %>
                        </p></a>
                      </td>
                      <td>
                        <a href="/tnt/rental/<%= props.id %>">
                        <p class="text-sm font-weight-bold mb-0">
                          â‚¦<%= Number (props.rent_price ).toLocaleString() %>
                        </p></a>
                      </td>

                      <td class="align-middle text-center">
                        <% if (props.status=='pending' ) { %>
                          <div class="d-flex align-items-center justify-content-center">
                            <span class="me-2 text-xs font-weight-bold text-capitalize">
                              <%= props.status %>
                            </span>
                            <div>
                              <div class="progress">
                                <div class="progress-bar bg-gradient-info" role="progressbar" aria-valuenow="45"
                                  aria-valuemin="0" aria-valuemax="100" style="width: 45%;"></div>
                              </div>
                            </div>
                          </div>
                          <% } else if (props.status=='reject' ) { %>
                            <div class="d-flex align-items-center justify-content-center">
                              <span class="me-2 text-xs font-weight-bold text-capitalize">
                                <%= props.status %>ed
                              </span>
                              <div>
                                <div class="progress">
                                  <div class="progress-bar bg-gradient-danger" role="progressbar" aria-valuenow="20"
                                    aria-valuemin="0" aria-valuemax="100" style="width: 20%;"></div>
                                </div>
                              </div>
                            </div>
                            <% } else { %>
                              <div class="d-flex align-items-center justify-content-center">
                                <span class="me-2 text-xs font-weight-bold text-capitalize">
                                  <%= props.status %>
                                </span>
                                <div>
                                  <div class="progress">
                                    <div class="progress-bar bg-gradient-success" role="progressbar" aria-valuenow="95"
                                      aria-valuemin="0" aria-valuemax="100" style="width: 97%;"></div>
                                  </div>
                                </div>
                              </div>
                              <% } %>

                      </td>
                      <td class="align-middle">
                        <button class="btn btn-link text-secondary mb-0">
                          <i class="fa fa-ellipsis-v text-xs"></i>
                        </button>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div> <br>
  <% } else { %>
    <div class="row mt-4">
      <div class="card p-4">
        <h3 class="text-capitalize text-center">There is currently no rent information Available</h3>
      </div>
    </div> <br>
    <% } %>