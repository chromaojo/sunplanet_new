<div class="card shadow-lg mx-4 card-profile-bottom">
  <div class="card-body p-3">
    <div class="row gx-4">
      <div class="col-auto">
        <div class="avatar avatar-xl position-relative">
          <img src="../assets/img/team-1.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
        </div>
      </div>
      <div class="col-auto my-auto">
        <div class="h-100">
          <h5 class="mb-1 text-uppercase">
            Help Desk
          </h5>
          <p class="mb-0 font-weight-bold text-sm">
            <%= userData.email %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="container-fluid py-4">
  <div class="row">

    <div class="col-md-12">
      <div class="card ">
        <div class="card-header pb-0 p-3">
          <div class="d-flex justify-content-between">
            <h6 class="mb-2">
              <img src="../assets/img/icons/flags/nijja.gif" alt="Country flag" width="23px">
              - Help Desk
            </h6>
          </div>
        </div>
        <div class="table-responsive">
          <% counter=1 %>
            <table class="table align-items-center ">
              <tbody>
                <% helpDesks.forEach(help=> { %>

                  <tr>
                    <td class="w-30">

                      <a href="/invst/help/<%= help.id %>">
                        <div class="d-flex px-2 py-1 align-items-center">
                          <div>
                            <%= counter ++ %>
                              <!-- <img src="../assets/img/icons/flags/nijja.gif"
                                                alt="Country flag" width="23px"> -->
                          </div>
                          <div class="ms-4">
                            <p class="text-xs font-weight-bold mb-0">Full Name </p>
                            <h6 class="text-sm mb-0 text-capitalize">
                              <%= help.name %>
                            </h6>
                          </div>
                        </div>
                      </a>
                    </td>
                    <td>
                      <a href="/invst/help/<%= help.id %>">
                        <div class="text-center">
                          <p class="text-xs font-weight-bold mb-0">Title </p>
                          <h6 class="text-sm mb-0">
                            <%= help.title %>
                          </h6>
                        </div>
                      </a>
                    </td>
                    <td>
                      <a href="/invst/help/<%= help.id %>">
                        <div class="text-center">
                          <p class="text-xs font-weight-bold mb-0">Account Id </p>
                          <h6 class="text-sm mb-0">
                            <%= help.account_id %>
                          </h6>
                        </div>
                      </a>
                    </td>
                    <td class="align-middle text-sm">
                      <a href="/invst/help/<%= help.id %>">
                        <div class="col text-center">
                          <p class="text-xs font-weight-bold mb-0"> Date </p>
                          <h6 class="text-sm mb-0">
                            <%= new Date(help.date).toLocaleDateString() %>
                          </h6>
                        </div>
                      </a>
                    </td>

                    <td class="align-middle text-sm">
                      <div class="col text-center">
                        <p class="text-xs font-weight-bold mb-0">Status </p>
                        <h6 class="text-sm mb-0 text-capitalize ">
                          <%= help.status %>
                        </h6>
                      </div>
                    </td>
                  </tr>

                  <% }); %>


              </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>