<div class="container mt-5">
    <h2 class="text-center text-light font-weight-bold">Create Investment</h2>
    <form class="p-4 border rounded bg-light needs-validation" novalidate>

        <div class="row">
            <div class="col-6">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label">Investment Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter new property name" required>
                    <div class="invalid-feedback">Please enter investment name.</div>
                </div>
            </div>
            <div class="col-6">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label">Investment Amount (Unit price)</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                    <div class="invalid-feedback">Please enter unit price</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label">Expected Returns (ROI)</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter return on investment" required>
                    <div class="invalid-feedback">Please enter the returns on investment.</div>
                </div>
            </div>
            <div class="col-6">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label">Investment Duration</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Duration" required>
                    <div class="invalid-feedback">Please enter unit price</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label">Investment Details </label>
                    <input type="text" class="form-control" id="name" placeholder="Enter return on investment" required>
                    <div class="invalid-feedback">Please enter the returns on investment.</div>
                </div>
            </div>
            <div class="col-6">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="role" class="form-label">Select Status</label>
                    <select class="form-select" id="role" required>
                        <option value="">Choose...</option>
                        <option value="active">Active</option>
                        <option value="closed">Closed</option>
                        <option value="pending">Pending</option>
                    </select>
                    <div class="invalid-feedback">Please select a role.</div>
                </div>

            </div>
        </div>



      

        <!-- Checkbox -->
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" value="" id="terms" required>
            <label class="form-check-label" for="terms">
                Agree to terms and conditions
            </label>
            <div class="invalid-feedback">You must agree before submitting.</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</div>







<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>