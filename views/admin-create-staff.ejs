<div class="container mt-5 p-3 w-50">
    <h2 class="text-center text-light font-weight-bold">Create Staff</h2>
    
    <form action="/spco/investment" class="p-4 border rounded bg-info needs-validation" novalidate method="POST">
        
        <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter new property name" name="property_name" required>
            <div class="invalid-feedback">Enter Tenant's Name in Full.</div>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Email</label>
            <input type="text" class="form-control" id="name" placeholder="Enter email" name="property_name" required>
            <div class="invalid-feedback">Enter Tenant's Email Address.</div>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Phone Number" name="property_name" required>
            <div class="invalid-feedback">Enter Tenant's Phone Number.</div>
        </div> 
        <div class="mb-3">
            <label for="name" class="form-label">Whatsapp</label>
            <input type="text" class="form-control" id="name" placeholder="Enter whatsapp line" name="property_name" required>
            <div class="invalid-feedback">Enter Tenant's Whatsapp Line.</div>
        </div> 
        <div class="mb-3">
            <label for="name" class="form-label">Address</label>
            <input type="text" class="form-control" id="name" placeholder="Enter address" name="property_name" required>
            <div class="invalid-feedback">Enter Tenant's Address.</div>
        </div> 
        <div class="text-center">
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-50">Submit</button>
        </div>

    </form>
</div>







<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>