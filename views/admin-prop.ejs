<% if (properties.length> 0) { %>
  <div id="prop-all p-3">
    <div class="row">
      <% properties.forEach(props=> { %>
        <div class="col-xl-11 col-sm-12 mb-xl-4 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-md-9">
                  <div class="numbers">
                    <p class="text-sm mb-3 text-uppercase font-weight-bold">
                      <img src="/assets/img/icons/flags/nijja.gif" alt="Country flag" width="30px">
                      <%= props.property_type %> || <%= props.city %> , <%= props.country %>
                    </p>
                    <h5 class="font-weight-bolder text-capitalize">
                      <%= props.property_name %>
                    </h5>

                    <p class="mb-4 text-capitalize">
                      <span class="text-success text-sm font-weight-bolder">
                        <%= props.number_of_units %> Unit(s)
                      </span>
                      <%= props.action.replace('_', " " ) %>
                    </p>

                    <a href="/spco/props/<%= props.id %>" class="btn btn-danger">Read More</a>
                    <a href="/spco/rent-apply/<%= props.id %>" class="btn btn-primary">Apply For This</a>
                  </div>
                </div>
                <div class="col-md-3 text-end mt-3">
                  <a href="/spco/create-property" class="btn btn-danger w-100">
                    <i class="fa fa-plus" aria-hidden="true"></i> Create New Property
                  </a>
                </div>

              </div>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div> <br>
  <% } else { %>
    <div class="row mt-4">
      <div class="card p-4">
        <h3 class="text-capitalize text-center">There is currently No property Available</h3>
        <br>
        <div class="col-md-6 text-end p-4">
          <a href="/spco/create-property" class="btn btn-danger">
            <i class="fa fa-plus" aria-hidden="true"></i> Create New Property
          </a>
        </div>
      </div>
    </div> <br>
    <% } %>