<div class="card shadow-lg mx-4 card-profile-bottom">
  <div class="card-body p-3">
    <div class="row gx-4">
      <div class="col-auto">
        <div class="avatar avatar-xl position-relative">
          <img src="../assets/img/team-1.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
        </div>
      </div>
      <div class="col-auto my-auto">
        <div class="h-100">
          <h5 class="mb-1 text-uppercase">
            Archive
          </h5>
          <p class="mb-0 font-weight-bold text-sm">
            <%= userData.email %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
<div class="container-fluid py-4">
  <div class="row">

    <div class="col-md-12">
    <% if (savedProperties.length > 0 ) { %>
      <div class="card ">
        <div class="card-header pb-0 p-3">
          <div class="d-flex justify-content-between">
            <h6 class="mb-2">
              <img src="../assets/img/icons/flags/nijja.gif" alt="Country flag" width="23px">
              - My Archive
            </h6>
          </div>
        </div>
        <div class="table-responsive">
          <% counter=1 %>
            <table class="table align-items-center ">
              <tbody>
                <% savedProperties.forEach(saved=> { %>

                  <tr>
                    <td class="w-30">

                      <a href="/tnt/<%= saved.prop_link %>">
                        <div class="d-flex px-2 py-1 align-items-center">
                          <div>
                            <%= counter ++ %>
                              <!-- <img src="../assets/img/icons/flags/nijja.gif"
                                                alt="Country flag" width="23px"> -->
                          </div>
                          <div class="ms-4">
                            <p class="text-xs font-weight-bold mb-0">Property Name </p>
                            <h6 class="text-sm mb-0 text-capitalize">
                              <%= saved.name %>
                            </h6>
                          </div>
                        </div>
                      </a>
                    </td>
                    <td>
                      <a href="/tnt/<%= saved.prop_link %>">
                        <div class="text-center">
                          <p class="text-xs font-weight-bold mb-0">Price </p>
                          <h6 class="text-sm mb-0">
                            â‚¦<%= Number (saved.price).toLocaleString() %>
                          </h6>
                        </div>
                      </a>
                    </td>
                   
                    <td>
                      <a href="/tnt/<%= saved.prop_link %>">
                        <div class="text-center">
                          <p class="text-xs font-weight-bold mb-0">Property Type </p>
                          <h6 class="text-sm mb-0 text-capitalize">
                            <%= saved.save_type %>
                          </h6>
                        </div>
                      </a>
                    </td>
                    <td class="align-middle text-sm">
                      <a href="/tnt/<%= saved.prop_link %>">
                        <div class="col text-center">
                          <p class="text-xs font-weight-bold mb-0"> Save Date </p>
                          <h6 class="text-sm mb-0">
                            <%= new Date(saved.createdAt).toLocaleDateString() %>
                          </h6>
                        </div>
                      </a>
                    </td>
                    <td class="align-middle text-sm">
                      <a href="/tnt/saved-delete/<%= saved.id %>" class="btn btn-sm btn-outline-danger mt-3">
                        Delete 
                      </a>
                    </td>
                  </tr>

                  <% }); %>


              </tbody>
            </table>
        </div>
      </div>

      <% } else { %>
       <div class="card p-5">
        <h3 class="text-center text-uppercase p-5">Archive is currently Empty</h3>
       </div>
    <% } %>
     
    </div>
  </div>
</div>