<% if (investment) { %>
  <div id="invest-all p-3">
    <div class="row">
      <div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
        <div class="card">
          <div class="card-body p-3">
            <div class="row">
              <div class="col-8">
                <div class="numbers">
                  <p class="text-sm mb-3 text-uppercase font-weight-bold">
                    <img src="/assets/img/icons/flags/nijja.gif" alt="Country flag" width="30px">
                    You can make ₦<%= investment.expected_return %> on every ₦<%= investment.investment_amount %> you invest in this plan


                  </p>
                  <h5 class="font-weight-bolder text-capitalize">
                    <%= investment.property_name %>
                  </h5>
                  <div class="row">
                    <div class="col-md-6">
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Duration</span>
                        <%= investment.investment_duration %> Months
                      </p>
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Expected Returns</span>
                        ₦<%= investment.expected_return %>
                      </p>
                      <p class="mb-3 text-capitalize">
                        <span class="text-success text-sm font-weight-bolder">Investment Amount</span>
                        ₦<%= investment.investment_amount %>
                      </p>
                    </div>
                    <div class="col-md-6 p-2">
                      <b class="text-capitalize">
                        <%= investment.status %> Investment
                      </b> <br>
                      <a href="" class="btn btn-primary mt-3">Apply Now</a>
                    </div>
                  </div>

                  <p class="mb-3 mt-3 text-capitalize">
                    <span class="text-success text-sm font-weight-bolder">Info : </span>
                    <%= investment.details %>
                  </p>

                </div>
              </div>
              <div class="col-md-4">
                <div class="card card-profile">
                  <% let pix=investment.picture.split(',') %>
                    <% for( let index=0; index < pix.length; index++ ) { %>
                      <img src="/invest/<%= pix[index] %>" alt="Investment Image" class="card-img-top mt-2">
                      <% } %>




                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

  </div> <br>

  <% } else { %>
    <div class="row mt-4">
      <div class="card p-4">
        <h3 class="text-capitalize text-center">There is currently no information</h3>
      </div>
    </div> <br>
    <% } %>