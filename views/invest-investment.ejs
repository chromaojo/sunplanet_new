<% if (investments.length> 0) { %>
    <div id="invest-all p-3">
        <div class="row">
            <% investments.forEach(investment=> { %>

                
                <div class="col-xl-6 col-sm-12 mb-xl-0 mb-4">
                    <div class="card">
                      <div class="card-body p-3">
                        <div class="row">
                          <div class="col-12">
                            <div class="numbers">
                              <p class="text-sm mb-3 text-uppercase font-weight-bold">
                                <img src="../assets/img/icons/flags/nijja.gif" alt="Country flag" width="30px">
                                <%= investment.property_name %></p>
                              <h5 class="font-weight-bolder text-capitalize">
                                Make ₦ <%= investment.expected_return %> on every ₦ <%= investment.investment_amount %> you invest in this plan
                              </h5>

                              <p class="mb-4 text-capitalize">
                                <span class="text-success text-sm font-weight-bolder">Duration</span>
                                <%= investment.investment_duration %> Months
                              </p>
                            
                              <a href="/invst/investment/<%= investment.id %>" class="btn btn-primary">Read More</a> <a href="" class="btn btn-primary">Apply For This</a>
                            </div>
                          </div>
                         
                        </div>
                      </div>
                    </div>
                  </div>


                <% }); %>
            
            
          </div> 

    </div> <br>

    <% } else { %>
        <div class="row mt-4">
            <div class="card p-4">
                <h3 class="text-capitalize text-center">There is currently no investment Available Here</h3>
            </div>
        </div> <br>
        <% } %>