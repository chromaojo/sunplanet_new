<body class="properties-page">

  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

      <a href="/" class="logo d-flex align-items-center">
        <img src="/assets1/img/logo.png" alt="">
        <!-- <h1 class="sitename">Sun<span>Planet</span></h1> -->
      </a>

      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About Us</a></li>
          <li class="dropdown"><a href="#"><span>Investment</span> <i
                class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
              <li><a href="/about-invest">About Our Investment</a></li>
              <li><a href="#">Investments</a></li>
            </ul>
          </li>
          <li><a href="/properties" class="active">Properties</a></li>
          <li class="dropdown"><a href="#"><span>Login</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
              <li><a href="/login-investor">Investor</a></li>
              <li><a href="/login-tenant">Tenant</a></li>
            </ul>
          </li>

        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>

    </div>
  </header>

  <main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1 class="mt-2">Properties</h1>
              <div class="border p-4">
                <div class="d-flex">
                <input type="text" class="form-control" placeholder="Search Property" name="property_name" >
                <button type="submit" class="btn btn-primary">
                  <i class="fa fa-search" aria-hidden="true"></i>
                </button>
              </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs"> 
        <div class="container">
          <ol>
            <li><a href="/">Home</a></li>
            <li class="current">Properties</li>
          </ol>
        </div>
      </nav>
    </div><!-- End Page Title -->

    <!-- Real Estate Section -->
    <section id="real-estate" class="real-estate section">

      <div class="container">
        <% if (properties.length > 0) { %>
          <div class="row gy-4">
            <% properties.forEach(props=> { %>
            <div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
              <div class="card">
                <img src="assets1/img/properties/property-1.jpg" alt="" class="img-fluid">
                <div class="card-body">
                  <span class="sale-rent text-capitalize"><%= props.property_type %> |  ₦ <%= Number (props.rent_price).toLocaleString() %></span>
                  <h3><a href="#" class="stretched-link text-capitalize"><%= props.property_name %></a></h3>
                  <div class="card-content d-flex flex-column justify-content-center text-center">
                    <div class="row propery-info">
                      <div class="col">Size (SqFt)</div>
                      <div class="col">Beds</div>
                      <div class="col">Baths</div>
                      <div class="col">Units</div>
                    </div>
                    <div class="row">
                      <div class="col">
                        <%= props.size_in_sqft %>
                      </div>
                      <div class="col">
                        <%= props.bedrooms %>
                      </div>
                      <div class="col"><%= props.bathrooms %></div>
                      <div class="col">
                        <%= props.number_of_units %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- End Property Item -->
            <% }); %>

          </div>
          <% } else { %>
           <h3 class="card p-4 text-center text-capitalize">There is no property in this category</h3>
        <% } %>
        
      </div>

    </section><!-- /Real Estate Section -->

  </main>

  <footer id="footer" class="footer light-background">

    <div class="container">
      <div class="row gy-3">
        <div class="col-lg-3 col-md-6 d-flex">
          <i class="bi bi-geo-alt icon"></i>
          <div class="address">
            <h4>Address</h4>
            <p>91 St. Finnbars Road ,</p>
            <p>Akoka, Yaba ,</p>
            <p>Lagos State, Nigeria</p>
          </div>

        </div>

        <div class="col-lg-3 col-md-6 d-flex">
          <i class="bi bi-telephone icon"></i>
          <div>
            <h4>Contact</h4>
            <p><strong>Phone:</strong> <span>08101353450, 08101631008</span></p>
            <p><strong>Email:</strong> <span>sunplanetcompanyltd@gmail.com</span></p>

          </div>
        </div>
        <div class="col-lg-3 col-md-6 d-flex">
          <i class="bi bi-clock icon"></i>
          <div>
            <h4>Opening Hours</h4>
            <p>
              <strong>Mon-Sat:</strong> <span>9AM - 2PM</span><br>
              <strong>Sunday</strong>: <span>Closed</span>
            </p>
          </div>
        </div>

        <div class="col-lg-3 col-md-6">
          <div class="d-flex">
            <i class="bi bi-link icon"></i>
          <h4>Logins</h4>
          </div>
          
          <div class="social-links d-flex">
            
            <a href="/login-admin" class="twitter mx-3">
               Admin
            </a>
            <a href="/login-investor" class="facebook mx-3">
              Investor
            </a>
            <a href="/login-tenant" class="instagram mx-3">
              Tenant
            </a>
          
          </div> <br>
          
          <h4>Contact / Follow Us</h4>
          <div class="social-links d-flex"> 
            <a href="mailto:sunplanetcompanyltd@gmail.com" class="twitter">
              <i class="bi bi-envelope"></i></a>
            <a href="https://web.facebook.com/sunplanetco" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
