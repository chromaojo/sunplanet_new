<div class="card shadow-lg mx-4 card-profile-bottom">
  <div class="card-body p-3">
    <div class="row gx-4">
      <div class="col-auto">
        <div class="avatar avatar-xl position-relative">
          <img src="../assets/img/team-1.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
        </div>
      </div>
      <div class="col-auto my-auto">
        <div class="h-100">
          <h5 class="mb-1 text-uppercase">
            <%= userData.full_name %>
          </h5>
          <p class="mb-0 font-weight-bold text-sm">
            <%= userData.email %>
          </p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
        <div class="nav-wrapper position-relative end-0">
          <ul class="nav nav-pills nav-fill p-1" role="tablist">
            <li class="nav-item">
              <a class="nav-link mb-0 px-0 py-1 active d-flex align-items-center justify-content-center "
                data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                <i class="ni ni-app"></i>
                <a href="/tnt/profile">
                  <span class="ms-2">View</span>
                </a>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link mb-0 px-0 py-1 d-flex align-items-center justify-content-center " data-bs-toggle="tab"
                href="javascript:;" role="tab" aria-selected="true">
                <i class="ni ni-email-83"></i>
                <a href="/tnt/profile-edit">
                  <span class="ms-2">Edit</span>
                </a>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link mb-0 px-0 py-1 d-flex align-items-center justify-content-center " data-bs-toggle="tab"
                href="javascript:;" role="tab" aria-selected="false">
                <i class="ni ni-settings-gear-65"></i>
                <span class="ms-2">Settings</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-md-7">
      <div class="card card-profile">
        <img src="../assets/img/bg-profile.jpg" alt="Image placeholder" class="card-img-top">
        <div class="row justify-content-center">
          <div class="col-4 col-lg-4 order-lg-2">
            <div class="mt-n4 mt-lg-n6 mb-4 mb-lg-0">
              <a href="javascript:;">
                <img src="../assets/img/team-2.jpg" class="rounded-circle img-fluid border border-2 border-white">
              </a>
            </div>
          </div>
        </div>
        <div class="card-header text-center border-0 pt-0 pt-lg-2 pb-4 pb-lg-3">
          <div class="d-flex justify-content-between">
            <a href="/tnt/profile-edit" class="btn btn-sm btn-primary mb-0 d-none d-lg-block">Edit Profile</a>
            <a href="javascript:;" class="btn btn-sm btn-info mb-0 d-block d-lg-none"><i
                class="ni ni-collection"></i></a>
            <a href="javascript:;" class="btn btn-sm btn-dark float-right mb-0 d-none d-lg-block">Message</a>
            <a href="javascript:;" class="btn btn-sm btn-dark float-right mb-0 d-block d-lg-none"><i
                class="ni ni-email-83"></i></a>
          </div>
        </div>
        <div class="card-body pt-0">
          <div class="row">
            <div class="col">
              <div class="d-flex justify-content-center">
                <div class="d-grid text-center mx-4">
                  <span class="text-lg font-weight-bolder">
                    <%= userData.tenant_balance %>
                  </span>
                  <span class="text-sm opacity-8">Current Balance </span>
                </div>
                <!-- <div class="d-grid text-center mx-4">
                    <span class="text-lg font-weight-bolder"></span>
                    <span class="text-sm opacity-8">Current Balance</span>
                  </div> -->
                <div class="d-grid text-center">
                  <span class="text-lg font-weight-bolder">
                    <%= userData.total_spent %>
                  </span>
                  <span class="text-sm opacity-8">Spent Total</span>
                </div>
              </div>
            </div>
          </div>
          <div class="text-center mt-4">
            <h5>
              <%= userData.full_name %><span class="font-weight-light">, </span>
            </h5>
            <div class="h6 font-weight-300">
              <i class="ni location_pin mr-2"></i>
              <%= userData.phone %>
            </div>
            <div class="h6 mt-4 text-capitalize">
              <i class="ni business_briefcase-24 mr-2"></i>
              <%= userData.acct_type %> - <%= userData.full_name %>
            </div>
            <div class="p-3">
              <i class="ni education_hat mr-2"></i>
              <%= userData.about ? userData.about : "About section is currently blank ." %>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-header pb-0 px-3">
          <h6 class="mb-0">Personal Information</h6>
        </div>
        <div class="card-body pt-4 p-3">
          <ul class="list-group">
            <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
              <div class="d-flex flex-column">
                <h6 class="mb-4 text-sm text-capitalize"><%= userData.full_name %></h6>
                <span class="mb-4 text-xs">Full Name: <span class="text-dark font-weight-bold ms-sm-2">
                    <%= userData.full_name %>
                  </span></span>
                <span class="mb-4 text-xs">Email Address: <span class="text-dark ms-sm-2 font-weight-bold">
                    <%= userData.email %>
                  </span></span>
                <span class="text-xs mb-4">Phone Number: <span class="text-dark ms-sm-2 font-weight-bold">
                    <%= userData.phone %>
                  </span></span>
                <span class="mb-4 text-xs">Account Role : <span class="text-dark ms-sm-2 font-weight-bold text-capitalize">
                    <%= userData.acct_type %>
                  </span></span>
                <span class="text-xs mb-4">Address : <span class="text-dark ms-sm-2 font-weight-bold">
                    <%= userData.address %>
                  </span></span>
                <span class="mb-4 text-xs">Tenant Balance : <span class="text-dark ms-sm-2 font-weight-bold">
                   N <%= userData.tenant_balance %>
                  </span></span>
                  <span class="mb-4 text-xs">About  : <span class="text-dark ms-sm-2 font-weight-bold">
                    <%= userData.about ? userData.about : "Kindly describe yourself "  %>
                   </span></span>

              </div>

            </li>

          </ul>
        </div>
      </div>
    </div>
  </div>
</div>